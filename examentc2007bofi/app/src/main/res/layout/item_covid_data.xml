<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivCovidData"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvCovidDataName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="CovidData Name"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivCovidData"
        app:layout_constraintTop_toTopOf="@id/ivCovidData"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvRealName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Real Name"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvCovidDataName"
        app:layout_constraintTop_toBottomOf="@id/tvCovidDataName"
        app:layout_constraintEnd_toEndOf="@id/tvCovidDataName" />

    <TextView
        android:id="@+id/tvPublisher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Publisher"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvRealName"
        app:layout_constraintTop_toBottomOf="@id/tvRealName"
        app:layout_constraintEnd_toEndOf="@id/tvRealName" />

</androidx.constraintlayout.widget.ConstraintLayout>
